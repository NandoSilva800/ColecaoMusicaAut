@model IEnumerable<Colecao_Musica.Models.Artistas>

@{
    ViewData["Title"] = "Desbloquear utilizadores";
}

<h1>Desbloquear Utilizadores</h1>

 <form asp-action="DesbloquearUtilizadores" method="post">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Nacionalidade)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Url)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nacionalidade)
                    </td>
                    <td>
                        <a href="url">@item.Url</a>
                    </td>

                </tr>
            }
        </tbody>
    </table>

    <input type="submit"
           class="btn"
           value="Actualizar dados dos artistas" />

</form>